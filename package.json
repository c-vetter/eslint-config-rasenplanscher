{
	"name": "eslint-config-rp",
	"version": "1.0.0",
	"description": "Being a manifest of how eslint should be configured, according to the author's considered opinion. PRs welcome!",
	"main": "eslintrc.js",
	"files": [
		"eslintrc.all.js",
		"eslintrc.important.js",
		"eslintrc.js"
	],
	"scripts": {
		"build": "run-s build:providers build:rules-index build:transpile build:bundle build:cleanup",
		"build:bundle": "rollup -c support/rollup.config.js",
		"build:cleanup": "eslint --fix eslintrc*.js",
		"build:rules-index": "ts-node --project support/tsconfig.json support/make-index.ts rulesConfigurations",
		"build:providers": "ts-node --project support/tsconfig.json support/build-providers.ts",
		"build:transpile": "tsc -p src/tsconfig.json",
		"edit": "run-s edit:definitions edit:rules-index edit:edit",
		"edit:definitions": "ts-node --project support/tsconfig.json support/get-definitions.ts",
		"edit:rules-index": "ts-node --project support/tsconfig.json support/make-index.ts rulesDefinitions",
		"edit:edit": "ts-node --project support/tsconfig.json support/edit-config.ts",
		"start": "npm run edit && npm run build",
		"test": "ava"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rasenplanscher/eslint-config-rp.git"
	},
	"keywords": [
		"eslint"
	],
	"author": "rasenplanscher",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/rasenplanscher/eslint-config-rp/issues"
	},
	"homepage": "https://github.com/rasenplanscher/eslint-config-rp#readme",
	"devDependencies": {
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@spec2ts/jsonschema": "^2.0.0-beta.3",
		"@types/eslint": "^7.2.10",
		"@types/estree": "^0.0.45",
		"@types/fs-extra": "^9.0.11",
		"@types/inquirer": "^7.3.1",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"ava": "^3.15.0",
		"case-anything": "^1.1.3",
		"eslint": "^7.25.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^32.3.4",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-regex": "^1.7.0",
		"eslint-plugin-typescript-custom-sort-keys": "^1.0.5",
		"eslint-plugin-unused-imports": "^1.1.1",
		"fs-extra": "github:rasenplanscher/node-fs-extra#esm",
		"inquirer": "^7.3.3",
		"inquirer-autocomplete-prompt": "^1.3.0",
		"npm-run-all": "^4.1.5",
		"open": "^7.4.2",
		"ora": "^5.4.0",
		"outdent": "^0.8.0",
		"readdirp": "^3.6.0",
		"rollup": "^2.46.0",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.4"
	},
	"peerDependencies": {
		"eslint": "^7.15.0"
	},
	"eslintConfig": {
		"root": true,
		"extends": "./eslintrc.all.js",
		"parserOptions": {
			"ecmaVersion": 2021,
			"sourceType": "module"
		}
	},
	"ava": {
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		],
		"verbose": true
	}
}
